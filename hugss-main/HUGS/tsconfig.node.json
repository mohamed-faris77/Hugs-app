{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",  // Use modern JavaScript
    "module": "CommonJS",  // CommonJS for Node.js compatibility
    "moduleResolution": "Node",  // Use Node module resolution
    "strict": true,  // Enable strict type checking
    "esModuleInterop": true,  // Allow default imports from non-ES modules
    "skipLibCheck": true,  // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true  // Ensure consistent file casing
  },
  "include": ["src/**/*.ts"],  // Include all TypeScript files in src
  "exclude": ["node_modules", "dist"]  // Exclude node_modules and dist folders
}
